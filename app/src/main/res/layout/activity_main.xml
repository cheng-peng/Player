<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/main_bt1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="简单播放"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/main_bt2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="基本播放"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/main_bt1" />

        <Button
            android:id="@+id/main_bt3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="控制播放"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/main_bt2" />

        <Button
            android:id="@+id/main_bt4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="片头带广告播放"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/main_bt3" />

        <Button
            android:id="@+id/main_bt5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="无缝切换（切换清晰度时不黑屏加载）"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/main_bt4" />

        <Button
            android:id="@+id/main_bt6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="进度预览播放"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/main_bt5" />

        <Button
            android:id="@+id/main_bt7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="下一集播放"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/main_bt6" />

        <Button
            android:id="@+id/main_bt8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="列表播放"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/main_bt7" />

        <Button
            android:id="@+id/main_bt9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="弹幕播放"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/main_bt8" />


    </android.support.constraint.ConstraintLayout>

</ScrollView>